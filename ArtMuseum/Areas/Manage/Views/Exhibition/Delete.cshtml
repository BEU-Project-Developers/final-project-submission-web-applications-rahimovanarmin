@model ArtMuseum.Models.Exhibition

<h2>Delete Exhibition</h2>

<p>Are you sure you want to delete this exhibition?</p>
<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Start:</strong> @Model.StartDate</p>
<p><strong>End:</strong> @Model.EndDate</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

