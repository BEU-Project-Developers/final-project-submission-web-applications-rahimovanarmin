
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Exhibitions List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Exhibition List</h2>
        <a href="#" class="btn btn-success">+ Create Exhibition</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Static exhibition data *@
            @foreach (var exhibition in new[]
            {
            new { Id = 1, Title = "Modern Art Showcase", Description = "An exhibition showcasing modern art", StartDate = DateTime.Parse("2025-01-15"), EndDate = DateTime.Parse("2025-02-15") },
            new { Id = 2, Title = "Classical Wonders", Description = "A display of classical art and sculptures", StartDate = DateTime.Parse("2025-03-01"), EndDate = DateTime.Parse("2025-04-01") },
            new { Id = 3, Title = "Nature Photography", Description = "A photographic journey through nature", StartDate = DateTime.Parse("2025-05-05"), EndDate = DateTime.Parse("2025-06-05") }
            })
            {
                <tr>
                    <td>@exhibition.Title</td>
                    <td>@exhibition.Description</td>
                    <td>@exhibition.StartDate.ToString("MM/dd/yyyy")</td>
                    <td>@exhibition.EndDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
