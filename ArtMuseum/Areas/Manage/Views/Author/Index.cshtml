

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Authors Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Authors</h2>
        <a href="#" class="btn btn-success">+ Create Author</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Biography</th>
                <th>Blogs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Static author data *@
            @foreach (var author in new[]
            {
            new { Id = 1, FullName = "Jane Doe", Email = "janedoe@example.com", Bio = "A passionate writer and blogger.", Blogs = new[] { "Blog Post 1", "Blog Post 2" } },
            new { Id = 2, FullName = "John Smith", Email = "johnsmith@example.com", Bio = "An author of various novels.", Blogs = new[] { "Story of the Lost", "Journey through Time" } },
            new { Id = 3, FullName = "Alice Brown", Email = "alicebrown@example.com", Bio = "Specializing in fantasy and science fiction.", Blogs = new[] { "The Mystical Forest", "Exploring Space" } }
            })
            {
                <tr>
                    <td>@author.FullName</td>
                    <td>@author.Email</td>
                    <td>@author.Bio</td>
                    <td>
                        @foreach (var blog in author.Blogs)
                        {
                            <div>@blog</div>
                        }
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
