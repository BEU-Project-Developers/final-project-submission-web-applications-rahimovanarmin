

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Blog List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Blog List</h2>
        <a href="#" class="btn btn-success">+ Create Blog</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Static blog data *@
            @foreach (var blog in new[]
            {
            new { Id = 1, Title = "The Future of Technology", Author = new { FullName = "Jane Doe" } },
            new { Id = 2, Title = "Traveling the World", Author = new { FullName = "John Smith" } },
            new { Id = 3, Title = "The Art of Cooking", Author = new { FullName = "Alice Brown" } }
            })
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@blog.Author.FullName</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
