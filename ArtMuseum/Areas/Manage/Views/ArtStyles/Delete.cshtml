@model ArtMuseum.Models.ArtStyle

@{
    ViewData["Title"] = "Delete ArtStyle";
}

<h2>Delete ArtStyle</h2>

<h4>Are you sure you want to delete this art style?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-area="Manage" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
