@model IEnumerable<ArtMuseum.Models.ArtStyle>

@{
    ViewData["Title"] = "Art Styles";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Art Styles Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Art Styles</h2>
        <a asp-action="Create" class="btn btn-success">+ Create Art Style</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Style Name</th>
                <th>Artworks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artStyle in Model)
            {
                <tr>
                    <td>@artStyle.Name</td>
                    <td>
                        @foreach (var artwork in artStyle.ArtworkArtStyles.Select(a => a.Artwork))
                        {
                            <div>@artwork.Title</div>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@artStyle.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@artStyle.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
