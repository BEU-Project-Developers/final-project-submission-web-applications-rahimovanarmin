
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Art Styles Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Art Styles</h2>
        <a href="#" class="btn btn-success">+ Create Art Style</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Style Name</th>
                <th>Description</th>
                <th>Artworks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Static art style data *@
            @foreach (var artStyle in new[]
            {
            new { Id = 1, Name = "Impressionism", Description = "Art movement that emphasizes the depiction of light and its changing qualities.", Artworks = new[] { "Impression, Sunrise", "Ballet Rehearsal" } },
            new { Id = 2, Name = "Cubism", Description = "An avant-garde movement that abandoned perspective and focused on abstract forms.", Artworks = new[] { "Les Demoiselles d'Avignon", "Guernica" } },
            new { Id = 3, Name = "Surrealism", Description = "A 20th-century avant-garde movement in art that sought to resolve the contradictory conditions of dream and reality.", Artworks = new[] { "The Persistence of Memory", "The Elephants" } }
            })
            {
                <tr>
                    <td>@artStyle.Name</td>
                    <td>@artStyle.Description</td>
                    <td>
                        @foreach (var artwork in artStyle.Artworks)
                        {
                            <div>@artwork</div>
                        }
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
