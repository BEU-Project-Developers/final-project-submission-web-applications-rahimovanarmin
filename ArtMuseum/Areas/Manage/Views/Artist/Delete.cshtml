@model ArtMuseum.Models.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<h2>Delete Artist</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h4>Are you sure you want to delete this artist?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Biography</dt>
        <dd class="col-sm-10">@Model.Biography</dd>

        <dt class="col-sm-2">Nation</dt>
        <dd class="col-sm-10">@Model.Nation</dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Model.BirthDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-area="Manage" asp-controller="Artist" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Manage" asp-controller="Artist" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}