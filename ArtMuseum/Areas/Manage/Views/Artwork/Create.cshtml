@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Artworks Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Artworks</h2>
        <!-- Butona tıklandığında modal açılır -->
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">+ Create Artwork</button>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Year Created</th>
                <th>Artist</th>
                <th>Art Styles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Starry Night</td>
                <td>Famous painting by Vincent van Gogh</td>
                <td>1889</td>
                <td>Vincent van Gogh</td>
                <td>Post-Impressionism</td>
                <td>
                    <a class="btn btn-sm btn-warning">Edit</a>
                    <a class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-area="Manage" asp-controller="Artwork" asp-action="Create" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title" id="createModalLabel">Create New Artwork</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" name="Title" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Year Created</label>
                            <input type="number" name="YearCreated" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Artist Name</label>
                            <input type="text" name="ArtistName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Art Styles</label>
                            <input type="text" name="ArtStyles" class="form-control" placeholder="e.g., Impressionism, Cubism" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
