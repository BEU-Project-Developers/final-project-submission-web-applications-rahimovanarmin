@model ArtMuseum.Models.Artwork
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Artwork";
    var artists = ViewData["Artists"] as SelectList;
    var artStyles = ViewData["ArtStyles"] as List<ArtMuseum.Models.ArtStyle>;
}

<style>
    /* Modern form styling with art gallery aesthetic */
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .preview-container {
        text-align: center;
        margin: 1.5rem 0;
        padding: 1rem;
        background-color: white;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .preview-image {
        max-width: 100%;
        max-height: 300px;
        border-radius: 5px;
        object-fit: contain;
        display: none;
        margin: 0 auto;
    }

    .preview-title {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .form-control, .form-select {
        border-radius: 5px;
        padding: 0.5rem 0.75rem;
        border: 1px solid #ced4da;
    }

        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #4361ee;
        border-color: #4361ee;
        padding: 0.5rem 1.5rem;
    }

    .btn-secondary {
        padding: 0.5rem 1.5rem;
    }

    .alert {
        border-radius: 5px;
    }

    .art-style-checkboxes {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .form-check {
        background-color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        border: 1px solid #dee2e6;
    }
</style>

<div class="form-container">
    <h2 class="mb-4 text-center">Add New Artwork</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            <strong>Please correct the following errors:</strong>
            <ul class="mb-0 mt-2">
                @foreach (var state in ViewData.ModelState.Values)
                {
                    foreach (var error in state.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form asp-action="Create" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Artwork Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter artwork title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter artwork description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="YearCreated" class="form-label">Creation Year</label>
            <input asp-for="YearCreated" type="date" class="form-control" />
            <span asp-validation-for="YearCreated" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ArtistId" class="form-label">Artist</label>
            <select asp-for="ArtistId" class="form-select" asp-items="artists">
                <option value="">-- Select Artist --</option>
            </select>
            <span asp-validation-for="ArtistId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" id="imageUrlInput"
                   placeholder="https://example.com/artwork.jpg" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>

            <button type="button" id="previewButton" class="btn btn-sm btn-outline-primary mt-2">
                Preview Image
            </button>

            <div class="preview-container mt-3">
                <div class="preview-title">Image Preview</div>
                <img id="imagePreview" class="preview-image" src="#" alt="Artwork preview" />
                <div id="previewError" class="text-danger small mt-2" style="display:none;"></div>
            </div>
        </div>


        <div class="mb-4">
            <label class="form-label">Art Styles</label>
            <div class="art-style-checkboxes">
                @foreach (var style in artStyles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="SelectedArtStyleIds"
                               value="@style.Id"
                               id="artstyle_@style.Id" />
                        <label class="form-check-label" for="artstyle_@style.Id">@style.Name</label>
                    </div>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Create Artwork</button>
            <a asp-action="Index" asp-area="Manage" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            function validateAndPreviewImage(url) {
                const preview = $('#imagePreview');
                const errorElement = $('#previewError');

                // Reset view
                preview.hide().attr('src', '#');
                errorElement.hide().text('');

                if (!url) {
                    errorElement.text('Please enter an image URL first.').show();
                    return;
                }

                // More permissive URL validation
                if (!url.match(/\.(jpeg|jpg|gif|png|webp|svg)(\?.*)?$/i)) {
                    errorElement.text('URL should point to an image file (jpg, png, gif, webp, svg).').show();
                    return;
                }

                // Test loading image
                const testImage = new Image();

                testImage.onload = function() {
                    preview.attr('src', url).show();
                };

                testImage.onerror = function() {
                    errorElement.text('Could not load image from this URL. Please check the URL is correct and accessible.').show();
                };

                testImage.src = url;
            }

            $('#previewButton').on('click', function() {
                const url = $('#imageUrlInput').val().trim();
                validateAndPreviewImage(url);
            });

            // Optional: trigger preview when input field loses focus
            $('#imageUrlInput').on('blur', function() {
                const url = $(this).val().trim();
                if (url) {
                    validateAndPreviewImage(url);
                }
            });
        });
    </script>
}