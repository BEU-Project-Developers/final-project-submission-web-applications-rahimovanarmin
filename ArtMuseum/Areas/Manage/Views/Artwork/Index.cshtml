@model IEnumerable<ArtMuseum.Models.Artwork>

@{
    ViewData["Title"] = "Artworks";
}

<h2>Artworks</h2>

<a asp-area="Manage" asp-controller="Artwork" asp-action="Create" class="btn btn-success mb-3">+ Create Artwork</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Year Created</th>
            <th>Artist</th>
            <th>Art Styles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artwork in Model)
        {
            <tr>
                <td>@artwork.Title</td>
                <td>@artwork.Description</td>
                <td>@artwork.YearCreated.Year</td>
                <td>@artwork.Artist?.Name</td>
                <td>
                    @string.Join(", ", artwork.ArtworkArtStyles.Select(aas => aas.ArtStyle.Name))
                </td>
                <td>
                    <a asp-area="Manage" asp-controller="Artwork" asp-action="Edit" asp-route-id="@artwork.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-area="Manage" asp-controller="Artwork" asp-action="Delete" asp-route-id="@artwork.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
