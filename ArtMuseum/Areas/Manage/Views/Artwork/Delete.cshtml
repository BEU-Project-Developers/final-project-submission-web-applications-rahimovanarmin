@model ArtMuseum.Models.Artwork

@{
    ViewData["Title"] = "Delete Artwork";
}

<h2>Delete Artwork</h2>

<h4>Are you sure you want to delete this artwork?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Year Created</dt>
        <dd class="col-sm-10">@Model.YearCreated.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Artist</dt>
        <dd class="col-sm-10">@Model.Artist?.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-area="Manage" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
