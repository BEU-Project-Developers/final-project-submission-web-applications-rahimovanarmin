@model IEnumerable<ArtMuseum.Models.Artist>

<!-- Start Artists Gallery Area -->
<section class="artists-area section-gap gallery-page-area" id="artists">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Our Artists Collection</h1>
                    <p>Discover the talented creators behind the masterpieces in our museum.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var artist in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="artist-card">
                        <a href="@Url.Action("Artist", "Gallery", new { id = artist.Id })" class="artist-link">
                            <div class="artist-image-container">
                                <img src="@artist.PhotoUrl" alt="@artist.Name" class="img-fluid artist-image">
                                <div class="image-overlay"></div>
                            </div>
                            <div class="artist-info">
                                <h3 class="artist-name">@artist.Name</h3>
                                <p class="artist-nation">@artist.Nation</p>
                                <p class="artist-birth">@artist.BirthDate.ToString("yyyy")</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Artists Gallery Area -->

<style>
    .artist-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

        .artist-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .artist-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }

    .artist-image-container {
        position: relative;
        overflow: hidden;
        height: 300px;
    }

    .artist-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .artist-card:hover .artist-image {
        transform: scale(1.05);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .artist-card:hover .image-overlay {
        opacity: 1;
    }

    .artist-info {
        padding: 20px;
        text-align: center;
    }

    .artist-name {
        font-size: 18px;
        margin-bottom: 5px;
        color: #222;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .artist-nation {
        color: #777;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .artist-birth {
        color: #777;
        font-size: 14px;
        margin-bottom: 0;
        font-style: italic;
    }
</style>