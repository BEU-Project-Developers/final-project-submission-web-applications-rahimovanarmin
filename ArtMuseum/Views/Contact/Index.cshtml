@model ArtMuseum.Models.Contact

@{
    string phoneNumber = ViewBag.Contact_PhoneNumber as string ?? Model?.PhoneNumber ?? "";
    string address = ViewBag.Contact_Address as string ?? Model?.Address ?? "";
    var userName = ViewBag.UserName as string;
}

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Contact Us
                </h1>
                <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="gallery.html"> Contact</a></p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Area Start -->
<section class="contact-form-main py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">

                <div class="card shadow-sm border-0">
                    <div class="card-body p-5">
                        <div class="mb-4 text-center">
                            <span class="text-muted text-uppercase fw-semibold small">Contact Form</span>
                            <h2 class="mt-2 fw-bold">Feel Free to Contact Us!</h2>
                        </div>

                        @if (TempData["SuccessMessage"] != null)
                        {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                        }

                        <form id="contact-form" asp-action="Submit" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label for="phoneNumber" class="form-label fw-semibold">Phone Number</label>
                                <input type="text" id="phoneNumber" name="PhoneNumber" class="form-control form-control-lg"
                                       placeholder="Enter your phone number" required value="@phoneNumber" />
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="mb-4">
                                <label for="address" class="form-label fw-semibold">Address</label>
                                <textarea id="address" name="Address" class="form-control form-control-lg" rows="4" maxlength="200" placeholder="Enter your address" required>@address</textarea>
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg fw-semibold" type="submit">
                                    Send Message
                                </button>
                            </div>
                        </form>

                        

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById("contact-form");

    @if (string.IsNullOrEmpty(userName))
    {
        <text>
                if (form) {
                    form.addEventListener("submit", function (e) {
                        e.preventDefault();
                        Swal.fire({
                            title: "Login Required",
                            text: "You must be logged in to submit your contact details.",
                            icon: "warning",
                            showCancelButton: true,
                            cancelButtonText: "Cancel"
                        })
                    });
                }
        </text>
    }
    });
</script>

<!-- Add SweetAlert2 (for nice popups) -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Contact Area End -->
