@model ArtMuseum.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - ArtMuseum</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e0e0e0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.05);
            width: 100%;
            max-width: 400px;
        }

        .form-container h2 {
            font-weight: 600;
            color: #333;
        }

        .btn-primary {
            background-color: #4a4e69;
            border: none;
        }

        .btn-primary:hover {
            background-color: #373b57;
        }

        .btn-toggle {
            color: #6c757d;
            text-decoration: none;
        }

        .btn-toggle:hover {
            text-decoration: underline;
        }

        label {
            font-weight: 500;
            color: #555;
        }

        .form-control:focus {
            border-color: #4a4e69;
            box-shadow: 0 0 0 0.2rem rgba(74, 78, 105, 0.25);
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="text-center mb-4">Login to ArtMuseum</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label for="Email">Email</label>
                <input type="email" name="Email" id="Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="Password">Password</label>
                <input type="password" name="Password" id="Password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>

            <a href="@Url.Action("Register", "Account")" class="btn-toggle d-block text-center mt-3">
                Don't have an account? Register
            </a>
        </form>
    </div>
</body>
</html>
